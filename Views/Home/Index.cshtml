@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <!-- Required meta tags always come first -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>SmoothScroll</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap-flex.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link href="~/css/myStyles.css" rel="stylesheet" />
    <!-- Scroll -->
    <script src="~/js/smooth-scroll.min.js"></script>
    <script>
        smoothScroll.init({
            selector: '[data-scroll]', // Selector for links (must be a class, ID, data attribute, or element tag)
            selectorHeader: null, // Selector for fixed headers (must be a valid CSS selector) [optional]
            speed: 2000, // Integer. How fast to complete the scroll in milliseconds
            easing: 'easeInOutCubic', // Easing pattern to use
            offset: 0, // Integer. How far to offset the scrolling anchor location in pixels
            callback: function (anchor, toggle) { } // Function to run after scrolling
        });
    </script>
</head>
<body>
    <!-- MENÚ -->
    <!--bootstrap-flex-->
    <div class="container-fluid navbar-fixed-top"style="">
        <div class="row menu-1 flex-items-xs-middle myNavbar">
            <img src="~/images/logoDeltaX.png" class="logo" />
            <div class="elements">
                <div class="elementDiv">
                    <a data-scroll href="#sec-1" class="element" role="button" aria-pressed="true">Inicio</a>
                </div>
                <div class="elementDiv">
                    <a data-scroll href="#sec-2" class="element" role="button" aria-pressed="true">Tecnología</a>
                </div>
                <div class="elementDiv">
                    <a data-scroll href="#sec-3" class="element" role="button" aria-pressed="true">Equipo</a>
                </div>
                <div class="elementDiv">
                    <a data-scroll href="#sec-4" class="element" role="button" aria-pressed="true">Contacto</a>
                </div>
                <div class="elementDiv">
                    <button data-scroll href="#sec-4" class="elementButton" role="button" aria-pressed="true">Iniciar sesión</button>
                </div>
            </div>
        </div>
    </div>
    <!-- FIN MENU -->
    <!-- SECCIÓN 1 -->
    <div class="container-fluid"style="height:100%;display:block;">
        <div id="sec-1">
            <div style="display:block;float:left;">
                <h1>Revolucionamos el</h1>
                <div style="display:flex;">
                    <h1 class="h12">Transporte.<span class="span1">&nbsp;</span></h1><h1>de carga en</h1>
                </div>
                <h1>Bolivia</h1>
            </div>
        </div>
    </div>
    <!-- FIN SECCIÓN -->
    <!-- SECCIÓN 2 -->
    <div class="container-fluid">
        <div class="row flex-items-xs-center slider-2 flex-items-xs-middle" id="sec-2">
            <div class="row">
                <div class="col-xs-12"><h1>Desarrollado con Bootstrap 4 beta</h1></div>
                <div class="col-xs-12"><h3>Sección 2</h3></div>
            </div>
        </div>
    </div>
    <!-- FIN SECCIÓN -->
    <!-- SECCIÓN 3 -->
    <div class="container-fluid">
        <div class="row flex-items-xs-center slider-3 flex-items-xs-middle" id="sec-3">
            <div class="row">
                <div class="col-xs-12"><h1>Además de Flexbox</h1></div>
                <div class="col-xs-12"><h3>Sección 3</h3></div>
            </div>
        </div>
    </div>
    <!-- FIN SECCIÓN -->
    <!-- SECCIÓN 4 -->
    <div class="container-fluid">
        <div class="row flex-items-xs-center slider-4 flex-items-xs-middle" id="sec-4">
            <div class="row">
                <div class="col-xs-12"><h1>Suscríbete en Youtube (bluuweb)</h1></div>
                <div class="col-xs-12"><h3>Sección 4</h3></div>
            </div>
        </div>
    </div>
    <!-- FIN SECCIÓN -->
    <footer class="footer text-muted">
        <div class="container" style="text-align:center;">
            &copy; Copyright Delta Express - <a style="color:white; text-decoration:none;" asp-area="" asp-controller="Home" asp-action="Index">2019</a>
        </div>
    </footer>
    <!-- jQuery first, then Tether, then Bootstrap JS. -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js" integrity="sha384-3ceskX3iaEnIogmQchP8opvBy3Mi7Ce34nWjpBIwVTHfGYWQS9jwHDVRnpKKHJg7" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.3.7/js/tether.min.js" integrity="sha384-XTs3FgkjiBgo8qjEjBk0tGmf3wPrWtA6coPfQDfFEY8AnYJwjalXCiosYRBIBZX8" crossorigin="anonymous"></script>
    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>