                Provisional para seleccionar los contenedores de : soy cliente y soy transportista
                *@
                <div class="elementDiv">
                    <button data-scroll href="#sec-4" class="btn btnLogIn" role="button" aria-pressed="true">Iniciar sesión</button>
                </div>
            </div>
        </div>
    </div>
    <!-- FIN MENU -->
    <!-- SECCIÓN 1 -->
    <div class="slider-1" id="sec-1">
        <div class="divContainer">
            <div class="text">
                <h1>Revolucionamos el</h1>
                <div style="display:flex;">
                    <h1 class="h12"><b>Transporte</b><span class="span1">&nbsp;</span></h1><h1>de carga en</h1>
                </div>
                <h1>Bolivia</h1>
                <button class="btn btnSoyCliente"><a data-scroll href="#sec-4">Soy cliente</a></button>
